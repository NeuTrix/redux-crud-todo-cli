{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": { "jsx": true }
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-console": "off",
        "no-return-assign": ["error", "except-parens"],
        "no-tabs": ["error", {
            "allowIndentationTabs": true 
        }],
        "no-underscore-dangle": ["error", { 
            "allow": ["_id"] 
        }],
        "padded-blocks": ["error", { 
            "blocks": "never" 
        }],
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"] 
        }],
        "react/jsx-indent": ["error", "tab"],
        "react/jsx-indent-props": ["error", "tab"],
        "space-in-parens": ["error", "never"],
        "sort-keys": ["error", "asc", {
            "caseSensitive": true,
            "natural": false
        }],
        "sort-vars": ["error", {
            "ignoreCase": true
        }]
    }
}