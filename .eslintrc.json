{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ], 
        "no-console": "off",
        "no-tabs": [
            "error", 
            { "allowIndentationTabs": true }
        ], 
        "react/jsx-filename-extension": [
            1, 
            { "extensions": [".js", ".jsx"] }
        ],
        "react/jsx-indent": [
            "error",
            "tab"
        ],
        "react/jsx-indent-props": [
            "error",
            "tab"
        ]
    }
}